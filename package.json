{
  "name": "hex",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "start": "npm run dev",
    "build": "npm run lint && vite build",
    "build:gh-pages": "GITHUB_PAGES=true vite build --base=/hex/",
    "build:gh-pages-lint": "npm run lint:src && GITHUB_PAGES=true vite build --base=/hex/",
    "lint:src": "eslint src/",
    "lint": "eslint .",
    "dev": "vite"
  },
  "dependencies": {
    "pixi.js": "^8.8.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.21.0",
    "eslint": "^9.21.0",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-prettier": "^5.2.6",
    "prettier": "^3.5.3",
    "vite": "^6.2.0",
    "vite-plugin-pwa": "^1.0.2"
  }
}
